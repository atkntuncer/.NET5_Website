@model KVVKWeb.Models.Dto.RegisterModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_hostpen.cshtml";
}
<body>
    <form asp-action="Create" method="post" class="col-lg-12">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Email" class="col-form-label text-left">Email *</label>
                    <input asp-for="Email" type="text" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-form-label text-left">Password *</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="col-form-label text-left">Confirm Password *</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Enter your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="col-form-label text-left">Name *</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="col-form-label text-left">Lastname *</label>
                    <input asp-for="LastName" class="form-control" placeholder="Enter your lastname" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NationalID" class="col-form-label text-left">NationalID *</label>
                    <input asp-for="NationalID" class="form-control" placeholder="Enter your nationalID" />
                    <span asp-validation-for="NationalID" class="text-danger"></span>
                </div>

            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="DateofBirth" class="col-form-label text-left">Date of Birth *</label>
                    <input asp-for="DateofBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateofBirth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="col-form-label text-left">Phone Number *</label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter your phone number" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MobilePhone" class="col-form-label text-left">Mobile Phone Number</label>
                    <input asp-for="MobilePhone" class="form-control" placeholder="Enter your mobile phone number" />
                    <span asp-validation-for="MobilePhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Adress" class="col-form-label text-left">Adress *</label>
                    <input asp-for="Adress" class="form-control" placeholder="Enter your adress" />
                    <span asp-validation-for="Adress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyName" class="col-form-label text-left">Company Name *</label>
                    <input asp-for="CompanyName" class="form-control" placeholder="Enter your company name" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <input type="submit" value="Create Account" class="btn btn-primary" />
                </div>
            </div>
        </div>
        <div class="row align-bottom"> <span class="align-bottom" style="color:red">* Bu alanların doldurulması zorunludur</span></div>

    </form>
</body>
