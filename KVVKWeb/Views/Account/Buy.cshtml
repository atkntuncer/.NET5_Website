@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model KVVKWeb.Models.Entities.Packages
@{
    ViewData["Title"] = "Buy";
    Layout = "~/Views/Shared/_Layout_hostpen.cshtml";
}

<form asp-action="Buy" method="post" class="col-lg-12">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Name" class="col-form-label text-left">PackageName</label>
                <input asp-for="Name" type="text" class="form-control" value="@Model.Name" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-form-label text-left">Description</label>
                <input asp-for="Description" class="form-control" value="@Model.Description" readonly />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="col-form-label text-left">Confirm Password *</label>
                <input asp-for="Price" class="form-control" value="$ @Decimal.Round(Model.Price,2)" readonly />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" value="Buy" class="btn btn-primary" />
            </div>
        </div>
    </div>


</form>

