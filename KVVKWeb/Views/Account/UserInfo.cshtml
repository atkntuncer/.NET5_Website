@model KVVKWeb.Models.Dto.ChangeInfoModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

    <div class="container">
        <form asp-action="UserInfo" method="post" class="col-lg-12">
            <div class="card">
                <div class="row">
                    <div class="card-body d-flex">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Email" class="col-form-label text-left">Email </label>
                                <input asp-for="Email" type="text" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="col-form-label text-left">Name </label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName" class="col-form-label text-left">Lastname </label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NationalID" class="col-form-label text-left">NationalID </label>
                                <input asp-for="NationalID" class="form-control" />
                                <span asp-validation-for="NationalID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CompanyName" class="col-form-label text-left">Company Name</label>
                                <input asp-for="CompanyName" class="form-control" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="DateofBirth" class="col-form-label text-left">Date of Birth</label>
                                <input asp-for="DateofBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateofBirth" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone" class="col-form-label text-left">Phone Number</label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MobilePhone" class="col-form-label text-left">Mobile Phone Number</label>
                                <input asp-for="MobilePhone" class="form-control" />
                                <span asp-validation-for="MobilePhone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Adress" class="col-form-label text-left">Adress</label>
                                <input asp-for="Adress" class="form-control" />
                                <span asp-validation-for="Adress" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group" style="margin-left:25px">
                            <input type="submit" value="Change Informations" class="btn btn-primary" />
                        </div>
                    </div>
                    <div style="margin-top:12.5px" class="form-group">
                        <span class="text-muted font-weight-bold font-size-h4">
                            <a asp-controller="Account" asp-action="ChangePassword" asp-route-id="@Model.UserID" class="text-primary font-weight-bolder" style="margin-left:35px">Change Password</a>
                        </span>
                    </div>
                </div>
            </div>
        </form>
    </div>
