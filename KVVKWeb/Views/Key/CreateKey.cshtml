@model KVVKWeb.Models.Entities.KeyInfo

@{
    ViewData["Title"] = "CreateKey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-lg-4 mx-auto">
        <div class="card">
            <form asp-action="CreateKey">
                <div class="row">
                    <div class="card-body d-flex">
                        <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="KeyLabel" class="control-label"></label>
                                <input asp-for="KeyLabel" class="form-control" />
                                <span asp-validation-for="KeyLabel" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group" style="margin-left:25px">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

